<section id="reasons" class="px-5 pb-28 section-feather bg-pastel-reasons min-h-[150svh] flex items-center justify-center">
  <div class="mx-auto max-w-3xl w-full">
    <div class="text-center">
      <p class="text-xs tracking-[0.35em] uppercase opacity-70">Niečo, čo cítim</p>

      <h2 class="mt-4 text-3xl md:text-5xl font-semibold">
        Prečo si to práve ty
      </h2>

      <p class="mt-4 text-base md:text-lg opacity-80 max-w-2xl mx-auto leading-relaxed">
        Pretože s tebou je všetko ľahšie.<br />
        A tichšie. A krajšie.
      </p>
    </div>

    {/* citáty */}
    <div class="mt-14 space-y-6 md:space-y-7">
      {[
        { small: "Niekedy stačí len byť.", text: "Si môj pokoj v chaose sveta." },
        { small: "Bez námahy.", text: "Pri tebe sa mi ľahšie dýcha. A viac sa smejem." },
        { small: "A bez masky.", text: "S tebou viem byť úplne sám sebou." },
      ].map((q) => (
        <figure class="reveal-quote quoteRow">
          <blockquote class="quote">
            <p class="quoteText">{q.text}</p>
          </blockquote>

          <figcaption class="quoteCaption">
            {q.small}
          </figcaption>
        </figure>
      ))}
    </div>

    {/* jemný “divider” pod citátmi */}
    <!-- <div class="mt-12 flex items-center justify-center gap-3 opacity-70">
      <span class="h-px w-10 bg-black/10"></span>
      <span class="text-xs tracking-[0.35em] uppercase">pre teba</span>
      <span class="h-px w-10 bg-black/10"></span>
    </div> -->
  </div>
</section>


<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const reasons = document.getElementById("reasons");
  const quotes = gsap.utils.toArray("#reasons .reveal-quote");

  if (reasons && quotes.length) {
    ScrollTrigger.create({
      trigger: reasons,
      start: "top 80%",
      onEnter: () => reasons.classList.add("is-on"),
    });

    gsap.fromTo(
      quotes,
      { y: 16, opacity: 0, filter: "blur(6px)" },
      {
        y: 0,
        opacity: 1,
        filter: "blur(0px)",
        duration: 0.85,
        ease: "power2.out",
        stagger: 0.14,
        scrollTrigger: {
          trigger: reasons,
          start: "top 72%",
        },
      }
    );
  }
</script>
